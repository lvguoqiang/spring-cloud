<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hand.microserversimpleprovideruser.mapper.UserMapper">

    <resultMap id="BaseMap" type="com.hand.microserversimpleprovideruser.domain.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="BIGINT" />
        <result column="balance" property="balance" jdbcType="DECIMAL"/>

        <result column="object_version_number" property="objectVersionNumber" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="selectParam">
        select id,
            username,
            name,
            age,
            balance,
            object_version_number
        from user
    </sql>
    <select id="selectById" resultMap="BaseMap">
        <include refid="selectParam"/>
        where id = #{id}
    </select>

</mapper>